body {
	font-family: sans-serif;
}


{*Header*}
.login-header {
	
}
.login-header-text {
	text-align: right;
	padding-right: 15%;
}



.menu-tab {
	display: flex;
	border: 3px solid #e8b05d;
	padding: 5px;
	margin: 5px;
	background-image: url('\Image\fadeout-color2.jpg');
}
.restaurant-icon {
	width: 50px;
	padding-right: 20px;
}
.restaurant-name-block {
	width: 20%;
}
.restaurant-name {
	font-size: 30px;
	margin: 0px;
}
.head-function {
	width: 100%;
}
.head-function li {
	display: inline;
	padding-left: 4%;
	padding-right: 4%;
}
.head-function li:first-child {
	color: #bf0d0d;
}


{*Content1*}
.newdish-discount {
	display: block;
	position: relative;
}
.newdish-discount-text {
	text-align:center;
	width: 200px;
	margin: auto;
}
.newdish-discount-text p {
	border: 4px solid #e8b05d;
	border-radius: 5px;
	background-color: #e8b05d;
}
.newdish {
	display:flex;
	list-style:none;
	padding: 10px;
}
.newdish li {
	padding: 5px;
}
.newdish li img {
	height: 260px;
}



.menu-list {
	border: 3px solid #e8b05d;
	background-image: url('\Image\fadeout-color2.jpg');
	background-repeat: repeat-x;
	background-color: white;
}
.menu-list-text{
	text-align:center;
	width: 200px;
	margin: auto;
}
.menupicture{
	display:flex;
	list-style:none;
	padding: 5px;
}
.menupicture li div {
	padding: 5px;
	text-align: center;
}
.menupicture li div p {
	border: 4px solid #e8b05d;
	border-radius: 5px;
	background-color: #e8b05d;
	text-align:center;
	width: 130px;
	margin: auto;
}
.menupicture li div img {
	height: 200px;
}



.introduce-tab {
	display: flex;
	padding: 20px;
}
.introduce {
	padding:10px;
}
.readmore {
	float: right;
}


{*Footer*}
.information{
	padding: 15px;
	display: flex;
	border: 4px solid #e8b05d;
	background-image: url('\Image\fadeout-color2.jpg');
	background-repeat: repeat-x;
}
.restaurant-icon {
	width:50px;
	height:75px;
}
.followus {
	padding: 10px;
}
.feedback {
	padding: 10px;
	display: flex;
}
.contact {
	padding: 10px;
	display: flex;
}
.icon {
	width:20px;
	height:20px;
	padding: 5px;
}




canvas {
    padding:0;
    margin:0;
	position: absolute;
	left: 0px;
	top: 0px;
	z-index: -1;
}
div.btnbg {
    position:fixed;
    left:0;
    top:0;
}